
@model UnimetalWeb.Models.POTypeMaster
@{
    ViewData["Title"] = "Details";

}

<section class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">PO Type Master</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Id"></label>
                                <input asp-for="Id" class="form-control" disabled />
                                <span asp-validation-for="Id" class="text-danger"></span>



                            </div>
                            <div class="form-group">

                                <label asp-for="POType"></label>
                                <input asp-for="POType" class="form-control" />
                                <span asp-validation-for="POType" class="text-danger"></span>


                            </div>
                            <div class="form-group">

                                <label asp-for="Abbrevation"></label>
                                <input asp-for="Abbrevation" class="form-control" />
                                <span asp-validation-for="Abbrevation" class="text-danger"></span>

                            </div>

                            <div class="form-group">

                                <label asp-for="POTypeDescription"></label>
                                <input asp-for="POTypeDescription" class="form-control" />
                                <span asp-validation-for="POTypeDescription" class="text-danger"></span>

                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">

                            <a asp-action="Edit" asp-controller="POTypeMaster" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Index" class="btn btn-danger">Back to List</a>
                        </div>

                    }

                </div>


            </div>

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

